{
  "name": "sql-library-backend",
  "version": "0.1.0",
  "description": "Simple SQL-based library backend built with Node.js and Express",
  "main": "src/app.js",
  "type": "module",
  "scripts": {
    "start": "node src/app.js",
    "dev": "node --watch src/app.js",
    "dev:ts": "tsx watch src/app.ts",
    "db:reset": "node src/scripts/reset-db.js",
    "db:check": "node src/scripts/check-tables.js",
    "lint": "node --check src/**/*.js",
    "validate-db": "node src/scripts/validate-schema.js",
    "check-types": "npx tsc --noEmit",
    "watch-types": "npx tsc --watch"
  },
  "keywords": [
    "node",
    "express",
    "backend",
    "sql",
    "postgresql",
    "api"
  ],
  "author": "Akab",
  "license": "MIT",
  "engines": {
    "node": "^20"
  },
  "dependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/express-session": "^1.18.2",
    "@types/pg": "^8.16.0",
    "@types/validator": "^13.15.10",
    "bcryptjs": "^3.0.3",
    "connect-pg-simple": "^10.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-session": "^1.18.2",
    "pg": "^8.16.3",
    "validator": "^13.15.26"
  },
  "devDependencies": {
    "@types/connect-pg-simple": "^7.0.3",
    "@types/node": "^25.0.10",
    "eslint": "^9.0.0",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
