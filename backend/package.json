{
	"name": "sql-library-backend",
	"version": "0.1.0",
	"description": "Simple SQL-based library backend built with Node.js and Express",
	"main": "src/app.js",
	"type": "module",
	"scripts": {
		"start": "node src/app.js",
		"dev": "node --watch src/app.js",
		"db:reset": "node src/scripts/reset-db.js",
		"db:check": "node src/scripts/check-tables.js",
		"lint": "node --check src/**/*.js",
		"validate-db": "node src/scripts/validate-schema.js"
	},
	"keywords": [
		"node",
		"express",
		"backend",
		"sql",
		"postgresql",
		"api"
	],
	"author": "Akab",
	"license": "MIT",
	"engines": {
		"node": "^20"
	},
	"dependencies": {
		"bcryptjs": "^3.0.3",
		"connect-pg-simple": "^10.0.0",
		"cors": "^2.8.5",
		"dotenv": "^17.2.3",
		"express": "^5.2.1",
		"express-session": "^1.18.2",
		"pg": "^8.16.3",
		"validator": "^13.15.26"
	},
	"devDependencies": {
		"@types/node": "^25.0.10",
		"eslint": "^9.0.0",
		"prettier": "^3.0.0",
		"typescript": "^5.9.3"
	}
}
